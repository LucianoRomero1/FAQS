{% extends 'base.html.twig' %}

{% block title %}Ver Categorias PP{% endblock %}

{% block body %}
{{parent()}}

<table class="table table-borderless">
        <thead>
             <tr style = "background-color: #0F9FA8;">
                <th>Nro</th>
                <th>Nombre</th>
                <th>Email Asociado   </th>
                <th>Publicado</th>
                <th>Fecha Publicaci√≥n Desde</th>
                <th style="text-align: center;">EDITAR</th>
                <th style="text-align: center;">ELIMINAR</th>
            </tr>
        </thead>
        <tbody id="myTable">
            {% for categoriaPP in categoria %}
            <tr>
                <th>{{ loop.index }}</th>
                <td>{{categoriaPP.nombreCategoria}}</td>
                {% if categoriaPP.destinos != null %}
                    <td>{{categoriaPP.destinos.email}}</td>
                {% else  %}
                    <td><a class = "" href = "{{path('verDestino')}}" style = "text-decoration: none; font-size: 18px; color: #0F9FA8;"><i class="far fa-envelope" style = "font-size:18px;"></i> Asignar email</a></td>
                    
                {% endif %}
                <td>{{categoriaPP.publicado}}</td>
                <td>{{categoriaPP.fechaPublicacionDesde|date('d-m-Y')}}</td>
                <td style="text-align: center;"><a class ="btn" href="{{path ('modificarCategoria', {'id': categoriaPP.id})}}" ><i class="far fa-edit text-success" style = "font-size: 20px;"></i></a></td>
                <td style="text-align: center;"><a class = "btn" onclick="DeleteFunction({{categoriaPP.id}})"><i class=" fas fa-trash text-danger"   style = "font-size: 20px"></i></a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table> 
<script src = "{{asset("js/verCategorias.js")}}"> </script>

{% endblock %}
