{% extends 'base.html.twig' %}

{% block title %}Ver Categorias Secundarias{% endblock %}

{% block body %}
{{parent()}} 
<table class="table table-borderless">
    <thead>
            <tr style = "background-color: #0F9FA8;">
            <th>Nro</th>
            <th>Nombre</th>
            <th>Categoria PP Asociada</th>
            <th>Publicado</th>
            <th>Fecha Publicaci√≥n Desde</th>
            <th style="text-align: center;">EDITAR</th>
            <th style="text-align: center;">ELIMINAR</th>
        </tr>
    </thead>
    <tbody id="myTable">
        {% for categoriaSec in catSecundarias %}
        <tr>
            <th>{{ loop.index }}</th>
            <td>{{categoriaSec.nombreCategoria}}</td>
            {# {% if categoriaSec.idCategoriaPrincipal != null %}
                <td>{{categoriaSec.idCategoriaPrincipal.nombreCategoria}}</td>
            {% endif %} #}
            <td>{{categoriaSec.idCategoriaPrincipal.nombreCategoria}}</td>
            <td>{{categoriaSec.publicado}}</td>
            <td>{{categoriaSec.fechaPublicacionDesde|date('d-m-Y')}}</td>
            <td style="text-align: center;"><a class ="btn" href="{{path ('modificarSecundarias', {'id': categoriaSec.id})}}" ><i class="far fa-edit text-success" style = "font-size: 20px;"></i></a></td>
            <td style="text-align: center;"><a class = "btn" onclick="DeleteFunction({{categoriaSec.id}})"><i class=" fas fa-trash text-danger"   style = "font-size: 20px"></i></a></td>
        </tr>
        {% endfor %}
    </tbody>
</table>  
<script src = "{{asset("js/verCatSecundaria.js")}}"> </script>

{% endblock %}