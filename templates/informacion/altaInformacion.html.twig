{% extends 'base.html.twig' %}

{% block title %}Alta Información{% endblock %}

{% block body %}
{# <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script> #}
{{parent()}}

<a class = "btn" style = "margin-left: 30px; margin-top: 40px;" href = "{{path('verInformacion')}}"><i class="fas fa-arrow-left" style = "font-size: 30px; color: #0F9FA8;"></i></a>
<div class ="container">
    <div class = "container mt-5" id = "divCruds" >
        <h1 class = "text-center  " style = "font-size: 50px;">Alta Información</h1>
        {{ form_start(formulario, {'enctype':'multipart/form-data'})}}
            <div class = "container mt-5 " id = "divPertenece">
                {{ form_widget(formulario.descripcion_corta, {attr: {class: 'form-control camposEstandar', placeholder: 'Descripción Corta'}})}}
            </div>
            <div class = "container mt-5 " id = "divPertenece">
                <h6 class =" ml-2">Categoría secundaria a asociar...</h6>
                {{ form_widget(formulario.id_categoria_secundaria, {attr: {class: 'form-control camposEstandar'}})}}
            </div>
            <div class = "container-fluid  mt-5 text-center"  id = "divInfoText">
                <label style= "color: #0F9FA8;" class = " mb-3 text-center">Explicación: </label>
                {{ form_widget(formulario.explicacion, {attr: {class: 'form-control camposEstandar', placeholder:"Explicación", type: 'fos_ckeditor'} })}}
            </div>
            <div class = "container mt-5 text-center">
                {{ form_widget(formulario.Aceptar, {attr: {class: 'btn btn-outline-info btn-lg'}})}}
            </div>
        {{ form_end(formulario) }}
    </div>
</div>
<br>
<br>
