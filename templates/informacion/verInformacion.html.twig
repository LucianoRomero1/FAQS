{% extends 'base.html.twig' %}

{% block title %}Ver Información{% endblock %}

{% block body %}
{{parent()}}

<table class="table table-borderless">
    <thead>
            <tr style = "background-color: #0F9FA8;">
            <th>Nro</th>
            <th>Descripción Corta</th>
            <th>Categoria Sec Asociada</th>
            <th style="text-align: center;">EDITAR</th>
            <th style="text-align: center;">ELIMINAR</th>
        </tr>
    </thead>
    <tbody id="myTable">
        {% for info in informacion %}
        <tr>
            <th>{{ loop.index }}</th>
            <td>{{info.descripcionCorta}}</td>
            <td>{{info.idCategoriaSecundaria.nombreCategoria}}</td>
            <td style="text-align: center;"><a class ="btn" href="{{path ('modificarInformacion', {'id': info.id})}}" ><i class="far fa-edit text-success" style = "font-size: 20px;"></i></a></td>
            <td style="text-align: center;"><a class = "btn" onclick="DeleteFunction({{info.id}})"><i class=" fas fa-trash text-danger"   style = "font-size: 20px"></i></a></td>
        </tr>
        {% endfor %}
    </tbody>
</table> 
<script src = "{{asset('js/verInformacion.js')}}"></script>
{% endblock %}